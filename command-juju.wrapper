#!/bin/sh
export PATH="$SNAP/bin:$SNAP/usr/bin:$PATH"
export GOPATH=$SNAP/go
export CGO_LDFLAGS="$CGO_LDFLAGS -L$SNAP/lib -L$SNAP/usr/lib -L$SNAP/lib/x86_64-linux-gnu -L$SNAP/usr/lib/x86_64-linux-gnu $LDFLAGS"
export JUJU_HOME=$SNAP_USER_DATA

LD_LIBRARY_PATH=$SNAP_LIBRARY_PATH:$LD_LIBRARY_PATH
exec "$SNAP/bin/juju" "$@"
